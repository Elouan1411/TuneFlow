<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_home_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/padding_screen"
        android:paddingHorizontal="@dimen/little_padding_screen">

        <!-- title -->
        <TextView
            android:id="@+id/title_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discover"
            android:textColor="@color/home_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <!-- subtitle -->
        <TextView
            android:id="@+id/subtitle_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore_music"
            android:textColor="@color/subtitle"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- search bar -->
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_text_rounded"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/search"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rechercher une musique, un artiste..."
                android:background="@null"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/subtitle"
                android:inputType="text"
                android:singleLine="true" />
        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:id="@+id/gridLayoutDiscover"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground">


                <ImageView
                    android:id="@+id/image_happy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/happy"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/bg_happy_image" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/happy"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground">


                <ImageView
                    android:id="@+id/image_chill"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/chill"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/bg_chill_image" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chill"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground">


                <ImageView
                    android:id="@+id/image_workout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/sport"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/bg_workout_image" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sport"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground">


                <ImageView
                    android:id="@+id/image_romantic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/romantic"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/bg_romantic_image" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/romantic"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground">


                <ImageView
                    android:id="@+id/image_sad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/sad"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/bg_sad_image" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sad"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground">


                <ImageView
                    android:id="@+id/image_focus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/work"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/bg_focus_image" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp" />
            </FrameLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>
