<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient">

    <!--    Loader-->
    <RelativeLayout
        android:id="@+id/layoutLoader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom">

        <ImageView
            android:id="@+id/loaderImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/loader"
            android:visibility="visible"
            tools:src="@drawable/ic_vinyl" />

        <TextView
            android:id="@+id/loaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loaderImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_between_bloc"
            android:layout_marginBottom="100dp"
            android:text="@string/loading"
            android:textColor="@color/subtitle"
            android:textSize="16sp"
            android:textStyle="italic" />

    </RelativeLayout>


    <!--    Error connection-->
    <RelativeLayout
        android:id="@+id/layoutError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home_gradient"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone">


        <ImageView
            android:id="@+id/errorIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/error"
            android:src="@drawable/ic_error" />


        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/errorIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="@string/error_occured"
            android:textColor="@color/home_title"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/errorSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/errorMessage"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="VÃ©rifie ta connexion Internet"
            android:textColor="@color/subtitle"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/errorSubText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_text_rounded"
            android:elevation="4dp"
            android:paddingStart="32dp"
            android:paddingTop="10dp"
            android:paddingEnd="32dp"
            android:paddingBottom="10dp"
            android:text="@string/retry"
            android:textAllCaps="false"
            android:textColor="@color/description" />

    </RelativeLayout>


    <!--    content-->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />


</FrameLayout>
