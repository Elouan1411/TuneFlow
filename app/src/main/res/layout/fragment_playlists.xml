<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollProfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/little_padding_screen"
        android:paddingVertical="@dimen/padding_screen">

        <!--header-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_between_bloc"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- title -->
                <TextView
                    android:id="@+id/titleFragmentPlaylist"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="@string/my_playlists"
                    android:textColor="@color/home_title"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- subtitle -->
                <TextView
                    android:id="@+id/subtitleFragmentPlaylist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/subtitle"
                    android:textSize="14sp"
                    tools:text="N playlists" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_color"
                android:layout_height="45dp">
                <ImageView
                    android:layout_width="27dp"
                    android:layout_centerInParent="true"
                    android:layout_height="27dp"
                    android:src="@drawable/ic_add" />

            </RelativeLayout>
        </LinearLayout>
        <!--end header-->



        <!--all playlist-->
        <GridLayout
            android:id="@+id/gridLayoutPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="2"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true" />
    </LinearLayout>
</ScrollView>
